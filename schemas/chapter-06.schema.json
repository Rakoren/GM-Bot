{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "chapter-06.schema.json",
  "title": "Chapter 06 Shards Schema",
  "type": "object",
  "oneOf": [
    { "$ref": "#/$defs/sourceRef" },
    { "$ref": "#/$defs/itemShard" },
    { "$ref": "#/$defs/tableShard" },
    { "$ref": "#/$defs/listShard" },
    { "$ref": "#/$defs/manifest" }
  ],
  "$defs": {
    "idString": { "type": "string", "minLength": 1 },
    "sourceRef": {
      "type": "object",
      "properties": {
        "file": { "type": "string" },
        "pages": { "type": "array", "items": { "type": "integer" } },
        "section": { "type": "string" }
      },
      "required": ["file", "pages", "section"],
      "additionalProperties": false
    },
    "itemShard": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "pattern": "^item\\.[a-z0-9_.]+$" },
        "name": { "type": "string" },
        "chapter": { "type": "integer", "const": 6 },
        "status": { "type": "string", "enum": ["complete", "partial", "placeholder"] },
        "item_type": { "type": "string" },
        "sourceRef": { "$ref": "#/$defs/sourceRef" },
        "notes": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id", "name", "chapter", "status", "item_type"],
      "additionalProperties": true
    },
    "tableShard": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "pattern": "^table\\.[a-z0-9_.]+$" },
        "name": { "type": "string" },
        "chapter": { "type": "integer", "const": 6 },
        "status": { "type": "string", "enum": ["complete", "partial", "placeholder"] },
        "sourceRef": { "$ref": "#/$defs/sourceRef" },
        "columns": { "type": "array", "items": { "type": "string" } },
        "entries": { "type": "array", "items": { "type": "object" } },
        "notes": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id", "name", "chapter", "status", "sourceRef", "entries"],
      "additionalProperties": true
    },
    "listShard": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "pattern": "^list\\.[a-z0-9_.]+$" },
        "name": { "type": "string" },
        "chapter": { "type": "integer", "const": 6 },
        "status": { "type": "string", "enum": ["complete", "partial", "placeholder"] },
        "items": { "type": "array", "items": { "type": "string" } },
        "notes": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id", "name", "chapter", "status", "items"],
      "additionalProperties": true
    },
    "manifest": {
      "type": "object",
      "properties": {
        "schema_version": { "type": "string" },
        "chapter": { "type": "integer", "const": 6 },
        "title": { "type": "string" },
        "generated_at": { "type": "string" },
        "paths": { "type": "object" },
        "shards": { "type": "array", "items": { "type": "object" } }
      },
      "required": ["schema_version", "chapter", "title", "shards"],
      "additionalProperties": true
    }
  }
}
